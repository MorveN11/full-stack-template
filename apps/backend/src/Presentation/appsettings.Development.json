{
  "AllowedOrigins": "http://localhost:3000",
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5432;Database=postgres-db;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "localhost:6379"
  },
  "Cache": {
    "InstanceName": "dev",
    "DefaultDurationMinutes": 10
  },
  "HealthChecks": {
    "Enabled": true
  },
  "RateLimiter": {
    "Key": "GlobalKey",
    "PermitLimit": 150,
    "WindowInSeconds": 60
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "Jwt": {
    "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
    "Issuer": "web-api",
    "Audience": "developers",
    "ExpirationInMinutes": 10
  },
  "Email": {
    "SenderEmail": "webapi@noreply.com",
    "Sender": "WebApi",
    "Host": "localhost",
    "Port": 25
  }
}
